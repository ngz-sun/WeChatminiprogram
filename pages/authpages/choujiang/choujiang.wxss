/* 转盘 */

.canvas-container ul, .canvas-container li {
  margin: 0;
  padding: 0;
  list-style: none;
}

.canvas-container {
  padding: 2px;
  margin: 0 auto;
  position: relative;
  left: 10rpx;
  top: 0;
  width: 330px;
  height: 310px;
  border-radius: 50%;
  /*border: 2px solid #E44025;*/

}

.canvas-content {
  box-sizing: content-box;
  border: 2px solid rgb(255, 224, 151);
  position: absolute;
  left: 5px;
  top: 5px;
  z-index: 1;
  display: block;
  width: 300px;
  height: 300px;
  border-radius: inherit;
  background-clip: padding-box;
  background-color: rgb(255, 224, 151);
}

.canvas-element {
  position: relative;
  z-index: 1;
  width: inherit;
  height: inherit;
  border-radius: 50%;
}

.canvas-list {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9999;
}

.canvas-item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color:rgb(228, 64, 37);
  font-weight: bold;
}

.canvas-item-text {
  position: relative;
  display: block;
  margin: 0 auto;
  padding-top: 10rpx;
  text-align: center;
  -webkit-transform-origin: 50% 150px;
  transform-origin: 50% 150px;
}

/* 使用媒体查询处理金元宝的大小和位置：屏幕400-600： */

@media (min-width:400px) and (max-width:599px) {
  .canvas-item image {
    width: 160rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(4) image {
    width: 100rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(5) image {
    width: 120rpx;
    transform: translateY(140rpx);
  }

  .canvas-item:nth-of-type(2) image {
    width: 180rpx;
    transform: translateY(150rpx);
  }

  .canvas-item:nth-of-type(6) image {
    width: 140rpx;
    transform: translateY(140rpx);
  }
}

/* 使用媒体查询处理金元宝的大小和位置：屏幕300-350： */

@media (min-width:300px) and (max-width:350px) {
